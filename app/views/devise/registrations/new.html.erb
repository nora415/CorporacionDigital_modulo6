<h2 class= "text-center"> Creacion de Usuarios</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class = "row text-center col-12">

   <div class="field">
      <%= f.label :Nombre %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" , class:"mb-5"%>
    </div>


      <div class="form-group">
        <%= f.label :Foto_perfil %>
        <%= f.file_field :avatar, class: 'form-control', class:"mb-5" %>
       </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email,  autocomplete: "email", class:"mb-5" %>
    </div>


    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password",class: 'form-control', class:"mb-5" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', class:"mb-5" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>